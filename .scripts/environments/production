#!/bin/bash

prepare_production() {
  info "Deploying to prod envinronment... ðŸš€ "

  info "Install Dependencies ðŸ”§"
  yarn install

  if [[ ! -f app.config.json ]]; then
    info "Copying the production configuration... ðŸ”§"
