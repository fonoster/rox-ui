#!/bin/bash

prepare_staging() {
  info "Deploying to stage envinronment... ğŸš€ "

  info "Install Dependencies ğŸ”§"
  yarn install

  if [[ ! -f app.config.json ]]; then
    info "Copying the stage configuration... ğŸ”§"
    cp ./.config/staging.config.json ./app.config.json
  fi

  info "Build and remove debugging dependencies ğŸ”§"
  yarn ci:build

  info "Move staging.html to root ğŸ”§"
  mv ./public/staging.html ./dist/index.html
}
